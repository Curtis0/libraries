<p id="notice"><%= notice %></p>

<h1>Listing Libraries</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Publisher</th>
      <th>Release date</th>
      <th>Isbn</th>
      <th>Book Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= library.title %></td>
        <td><%= library.author %></td>
        <td><%= library.price %></td>
        <td><%= library.publisher %></td>
        <td><%= library.release_date.strftime("%Y/%m/%d") %></td>
        <td><%= library.ISBN %></td>
        <td><img src="<%= library.book_image %>"></td>

        <td><%= link_to 'Show', library %></td>
        <td><%= link_to 'Edit', edit_library_path(library) %></td>
        <td><%= link_to 'Destroy', library, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

